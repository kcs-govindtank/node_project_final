generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id           Int      @id @default(autoincrement())
  firstName    String
  lastName     String
  email        String   @unique
  mobileNumber String   @unique
  countryCode  String
  gender       Gender?
  age          Int?
  isVerified   Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  otps Otp[]
}

enum Gender {
  M
  F
  O
}

model Otp {
  id        Int      @id @default(autoincrement())
  userId    Int
  otpCode   String
  type      OtpType
  expiresAt DateTime
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  User User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

enum OtpType {
  LOGIN
  REGISTRATION
  RESET_PASSWORD
}

model Category {
  id            Int           @id @default(autoincrement())
  categoryName  String        @unique
  isActive      Boolean       @default(true)
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  events        Event[]
  subcategories SubCategory[]

  @@map("Category") // Explicit table name mapping
}

model SubCategory {
  id              Int      @id @default(autoincrement())
  categoryId      Int
  subcategoryName String   @unique
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  category        Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  events          Event[]

  @@map("SubCategory") // Explicit table name mapping
}

model Country {
  id        Int      @id @default(autoincrement())
  name      String
  code      String   @unique
  createdAt DateTime @default(now())

  states State[]
  events Event[]

  @@map("Country") // Explicit table name mapping
}

model State {
  id        Int      @id @default(autoincrement())
  name      String   @unique
  countryId Int
  createdAt DateTime @default(now())
  country   Country  @relation(fields: [countryId], references: [id], onDelete: Cascade)

  events Event[]

  @@map("State") // Explicit table name mapping
}

model Event {
  id            Int           @id @default(autoincrement())
  title         String
  description   String?
  content       String?
  date          DateTime
  mediaType     String?
  file          String?
  location      String?
  language      String?
  publishStatus PublishStatus @default(DRAFT)
  publishDate   DateTime
  categoryId    Int?
  subcategoryId Int?
  stateId       Int?
  countryId     Int?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt

  category    Category?    @relation(fields: [categoryId], references: [id])
  subcategory SubCategory? @relation(fields: [subcategoryId], references: [id])
  country     Country?     @relation(fields: [countryId], references: [id])
  state       State?       @relation(fields: [stateId], references: [id])
}

enum PublishStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}
